entrypoint = "README.md"
modules = ["postgresql-16", "python-3.11"]

[nix]
channel = "unstable"

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "bff build"]
run = ["sh", "-c", "./build/web && python packages/python_server/server.py"]

[languages.deno]
pattern = "**/*.{ts,js,tsx,jsx,json,jsonc,md,mdx}"
[languages.deno.languageServer]
start = ["deno", "lsp"]
[languages.deno.languageServer.initializationOptions]
enable = true
lint = true
config = "./deno.jsonc"

[objectStorage]
defaultBucketID = "replit-objstore-606cdad4-5695-4398-ba16-1878dd101ab7"

[extension]
isExtension = true

[env]
HISTFILE = "/home/runner/${REPL_SLUG}/.cache/bash_history"
HISTCONTROL = "ignoredups"
HISTFILESIZE = "100000"
HISTSIZE = "10000"
FLAG_DIRENV = "1"
REPLIT_PID1_FLAG_DIRENV = "1"
FLAKE_PATH = "$HOME/workspace/nix_system/bin"
INFRA_BIN_PATH = "$HOME/workspace/infra/bin"
PATH = "$INFRA_BIN_PATH:$FLAKE_PATH:$PATH"
REPLIT_PORT_THINGY="8284"
DENO_TRACE_PERMISSIONS="true"
DENO_NO_UPDATE_CHECK="1"
OTEL_EXPORTER_OTLP_HEADERS="authorization=$HYPERDX_INGESTION_KEY"
OTEL_EXPORTER_OTLP_ENDPOINT="https://in-otel.hyperdx.io"
OTEL_SERVICE_NAME="CONTENT_FOUNDRY"
BF_ENV="DEVELOPMENT"

[[ports]]
localPort = 3011
externalPort = 3001

[[ports]]
localPort = 3333

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 8888
externalPort = 3000

[workflows]
runButton = "Run app"

[[workflows.workflow]]
name = "Run app"
author = 33272860
mode = "sequential"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run servers"

[[workflows.workflow]]
name = "DevTools"
author = 33272860

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bff devTools"

[[workflows.workflow]]
name = "Build"
author = 33272860

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bff build"

[[workflows.workflow]]
name = "Run Python"
author = 33272860

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python packages/python_server/server.py"

[[workflows.workflow]]
name = "Run servers"
mode = "parallel"
author = 33272860

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Python"
waitForPort = 3333

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run deno"

[[workflows.workflow]]
name = "Run deno"
mode = "sequential"
author = 33272860

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./build/web"
waitForPort = 8000

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Runner"

[[workflows.workflow]]
name = "Test Runner"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "deno test --allow-write --allow-read infra/bff/friends/__tests__/llm.test.ts"
