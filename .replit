entrypoint = "README.md"

[nix]
channel = "stable-24_11"

# Language Server Configuration (keep existing)
[languages.deno]
pattern = "**/*.{ts,js,tsx,jsx,json,jsonc,md,mdx}"
[languages.deno.languageServer]
start = ["deno", "lsp"]
[languages.deno.languageServer.initializationOptions]
enable = true
lint = true
config = "./deno.jsonc"

[languages.typescript]
pattern = "examples/**/*.{ts,tsx,js,jsx}"
[languages.typescript.languageServer]
start = ["typescript-language-server", "--stdio"]

[workflows]
runButton = "Run boltfoundry-com"

[[workflows.workflow]]
name = "Run boltfoundry-com"
mode = "sequential"
author = 33417482

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bft dev boltfoundry-com"

[[ports]]
localPort = 3001
externalPort = 3003

[[ports]]
localPort = 3002
externalPort = 5000

[[ports]]
localPort = 3003
externalPort = 80

[[ports]]
localPort = 3004
externalPort = 3002

[[ports]]
localPort = 3011
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 4200

[[ports]]
localPort = 5005
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080
exposeLocalhost = true

[[ports]]
localPort = 8081
externalPort = 8081

# Environment variables (keep existing)
[env]
HISTFILE = "$REPL_HOME/.cache/bash_history"
HISTCONTROL = "ignoredups"
HISTFILESIZE = "100000"
HISTSIZE = "10000"
INFRA_BIN_PATH = "$REPL_HOME/infra/bin"
PATH = "$INFRA_BIN_PATH:$PATH"
DENO_TRACE_PERMISSIONS="1"
DENO_NO_UPDATE_CHECK="1"
