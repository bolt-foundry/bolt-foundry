
entrypoint = "README.md"
modules = ["postgresql-16"]

[nix]
channel = "stable-24_11"

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "ls -la build"]
# build = ["sh", "-c", "bff build"]
run = ["sh", "-c", "WEB_PORT=9999 ./build/web"]

[languages.deno]
pattern = "**/*.{ts,js,tsx,jsx,json,jsonc,md,mdx}"
[languages.deno.languageServer]
start = ["deno", "lsp"]
[languages.deno.languageServer.initializationOptions]
enable = true
lint = true
config = "./deno.jsonc"

[workflows]
runButton = "Run for development"

[[workflows.workflow]]
name = "BFF build and run"
mode = "sequential"
author = 33272860

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Bff Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Web"

[[workflows.workflow]]
name = "Run for development"
author = 33272860
mode = "parallel"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BFF build and run"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run dev tools"

[[workflows.workflow]]
name = "---------------------------"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"this is a separator\""

[[workflows.workflow]]
name = "Run dev tools"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bff devTools --debug"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tools Server"

[[workflows.workflow]]
name = "Test Runner"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "deno test --allow-write --allow-read infra/bff/friends/__tests__/llm.test.ts"

[[workflows.workflow]]
name = "Run Web"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./build/web"

[[workflows.workflow]]
name = "Bff Build"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bff build --slow-exit"

[[workflows.workflow]]
name = "Tools Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x ./apps/web/tools.tsx && ./apps/web/tools.tsx"
waitForPort = 9999

[[workflows.workflow]]
name = "Restart language server"
mode = "sequential"
author = 33272860

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bff restartLsp"

[[workflows.workflow]]
name = "Start next.js sample"
mode = "sequential"
author = 33272860

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd examples/nextjs-sample && npm run dev"

[[workflows.workflow]]
name = "Run E2E Tests"
author = 33272860
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bff e2e --build"

[[workflows.workflow]]
name = "Run E2E Tests Only"
author = 33272860
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bff e2e"

[[workflows.workflow]]
name = "Run contacts cms"
author = 33417482
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/contacts; npm run dev"

[[workflows.workflow]]
name = "Run internalbf.com"
author = 33417482
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "deno run --allow-net --allow-env apps/internalbf/internalbf.ts"

[[workflows.workflow]]
name = "Run Collector"
author = 33272860
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x ./apps/collector/collector.ts && ./apps/collector/collector.ts"

